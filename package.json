{
  "name": "@jmondi/webpack-starter",
  "description": "Typescript Webpack Starter Pack",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf dist/*",
    "dev": "run-s clean build:dev",
    "prod": "run-s clean build:prod",
    "build:dev": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json webpack --config build/webpack.conf.ts",
    "build:prod": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json NODE_ENV=production webpack --config build/webpack.conf.ts",
    "pretty": "prettier --write src/**/*.ts src/**/*.scss"
  },
  "dependencies": {
    "enzyme": "^3.4.4",
    "react": "^16.4.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/webpack": "^4.4.10",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "enzyme-adapter-react-16": "^1.2.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.1",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^4.0.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^2.1.6",
    "react-dom": "^16.4.2",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "typescript"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/build/tests/setupTests.ts"
    ]
  }
}
